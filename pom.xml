<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <name>Azure Cosmos Cassandra Extensions for Java</name>
  <description>Extends the Cassandra driver with Azure Cosmos awareness features</description>
  <artifactId>azure-cosmos-cassandra-extensions.parent</artifactId>
  <url>https://docs.microsoft.com/en-us/azure/cosmos-db</url>
  <groupId>com.microsoft.azure</groupId>
  <version>0.12.1</version>
  <packaging>pom</packaging>
  <modules>
    <module>package</module>
    <module>examples</module>
  </modules>
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <maven.compiler.source>1.8</maven.compiler.source>
    <maven.compiler.target>1.8</maven.compiler.target>
    <javadoc.options/>
  </properties>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-javadoc-plugin</artifactId>
        <version>3.2.0</version>
        <inherited>true</inherited>
        <configuration>
          <quiet>true</quiet>
          <verbose>false</verbose>
          <sourceFileExcludes>
            <sourceFileExclude>**/internal/**/*.java</sourceFileExclude>
          </sourceFileExcludes>
        </configuration>
        <executions>
          <execution>
            <id>attach-javadocs</id>
            <goals>
              <goal>jar</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-source-plugin</artifactId>
        <version>3.2.1</version>
        <executions>
          <execution>
            <id>attach-sources</id>
            <goals>
              <goal>jar</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <dependencyManagement>
    <dependencies/>
  </dependencyManagement>
  <licenses>
    <license>
      <name>MIT License</name>
      <url>http://www.opensource.org/licenses/mit-license.php</url>
    </license>
  </licenses>
  <scm>
    <connection>scm:git:https://msdata.visualstudio.com/DefaultCollection/CosmosDB/_git/azure-cosmos-cassandra-extensions</connection>
    <developerConnection>scm:git:https://msdata.visualstudio.com/DefaultCollection/CosmosDB/_git/azure-cosmos-cassandra-extensions</developerConnection>
    <url>https://msdata.visualstudio.com/DefaultCollection/CosmosDB/_git/azure-cosmos-cassandra-extensions</url>
  </scm>
  <developers>
    <developer>
      <name>Azure Cosmos Developer Platform developers</name>
      <email>docdbdevplatdevs@microsoft.com</email>
      <organization>Microsoft</organization>
      <organizationUrl>http://www.microsoft.com/</organizationUrl>
    </developer>
  </developers>
</project>
